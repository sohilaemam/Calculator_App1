<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        android:hint="Start Calculate"
        android:textColorHint="#7D7D7D"
        android:textSize="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:paddingLeft="10sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#7D7D7D"
        android:text="AC"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toEndOf="@id/btn1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#7D7D7D"
        android:text="x"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toEndOf="@id/btn2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#7D7D7D"
        android:text="%"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toEndOf="@id/btn3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EF7E26"
        android:text="/"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:backgroundTint="#7D7D7D"
        android:text="7"
        android:textSize="30dp"
        style="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#7D7D7D"
        android:text="8"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#7D7D7D"
        android:text="9"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#EF7E26"
        android:text="*"
        android:textSize="30dp"
        android:textColor="@color/black"
        style="bold"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        android:backgroundTint="#7D7D7D"
        android:text="4"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        android:backgroundTint="#7D7D7D"
        android:text="5"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn10"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        android:backgroundTint="#7D7D7D"
        android:text="6"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn11"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        android:backgroundTint="#EF7E26"
        android:text="-"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7D7D7D"
        android:text="1"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn13"
        app:layout_constraintTop_toBottomOf="@id/btn10"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7D7D7D"
        android:text="2"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn14"
        app:layout_constraintTop_toBottomOf="@id/btn11"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7D7D7D"
        android:text="3"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toEndOf="@id/btn15"
        app:layout_constraintTop_toBottomOf="@id/btn11"
        android:layout_marginTop="20dp"
        android:backgroundTint="#EF7E26"
        android:text="+"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn17"
        android:layout_width="175dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn13"
        android:backgroundTint="#7D7D7D"
        android:text="0"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn18"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#7D7D7D"
        android:text="."
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn17"
        app:layout_constraintTop_toBottomOf="@id/btn15" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn19"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#EF7E26"
        android:text="="
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn18"
        app:layout_constraintTop_toBottomOf="@id/btn16" />
</androidx.constraintlayout.widget.ConstraintLayout>

